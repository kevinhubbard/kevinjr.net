<div class="container">
	<div class="row">
		<div class="col-md-8">
			{{#if message}}
				<div id="srvMsg" style="color: {{#if success}}green{{else}}red{{/if}}">{{message}}</div>
			{{/if}}
			<form action="/contact" method="post">

				<div class="form-group">
					<label for="email" class="headline">Email address:</label><br>
					<input id="email" class="form-control" type="email" name="email" placeholder="Email">
				</div>

				<div class="form-group">
					<label for="msg" class="headline">Message:</label>
					<textarea id="msg" class="form-control" rows="4" name="msg"></textarea>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Submit</button>
				</div>
			</form>
		</div>

		<div id="connect" class="col-md-4">
			<h1 class="headline">Connect With Me</h1>
			
				<a href="https://www.linkedin.com/in/kevin-hubbard-jr/" target="_blank"><img src="/images/linkedIn.png" alt="linkedIn icon"></a>
				<a href="https://github.com/kevinhubbard" target="_blank"><img src="/images/gitHub.png" alt="gitHub icon"></a>
				<a href="http://stackoverflow.com/users/7270795/kevin-hubbard" target="_blank"><img src="/images/stackOverflow.png" alt="stackOverflow icon"></a>
				<a href="https://www.chess.com/member/hubbadubs" target="_blank"><img src="/images/chess.png" alt="chess icon"></a>
		</div>
  	</div>
	</div>
</div>



