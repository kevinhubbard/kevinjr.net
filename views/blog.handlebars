<div id="blogPage">
	<h1 id="titlePage">Welcome to my Blog</h1>
	{{#each posts}}
	<div class="blogPreview">
		<h2 id="blogTitle"><a href="/blog/posts/{{slug}}">{{title}}</a></h2>
		<div id="dateAuthor">{{formatDate created_at}} &#8226; {{author}}</div>
		<p class="blogShort">{{{body}}}</p>
		<p><a id="more" href="/blog/posts/{{slug}}">READ MORE<span> &#8594;</span></a></p>
	</div>
	{{/each}}
</div>