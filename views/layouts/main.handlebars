					<label for="uname"><b>Username</b></label>
					<input type="text" name="uname" placeholder="Enter Email" required><br>

					<label for="psw"><b>Password</b></label>
					<input type="password" name="psw" placeholder="Enter Password" required><br>

					<button type="submit">Login</button>
					<label>
						<input type="checkbox" name="remember"> Remember Me
					</label>
				</div>

				<div class="contHelp" style="background-color:#f1f1f1">
					<a href="/signup">Sign Up</a>
					<a href="#forgot">Forgot Password</a>
				</div>
			</form>
		</div>

		<footer class="footer">
			<span>Kevin Hubbard &copy; <span id="footID"></span></span>
		</footer>
		<script>
			const today = new Date();
			const year = today.getFullYear();
			document.getElementById('footID').innerText = year;
